{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "moduleResolution": "Node",
    "outDir": "./dist",
    "rootDir": "./",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": false,
    "noEmit": false,
  },
  "include": [
    "config/**/*.ts",
    "controllers/**/*.ts",
    "models/**/*.ts",
    "routes/**/*.ts",
    "utils/**/*.ts",
    "views/**/*",
    "public/**/*",
    "app.ts",
    "types/**/*.d.ts",
  ],
  "exclude": ["node_modules", "dist", "public", "views"]
}
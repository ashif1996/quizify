{
    "compilerOptions": {
        "target": "ES6",
        "module": "ES6",
        "moduleResolution": "Node",
        "lib": ["DOM", "ES6"],    
        "strict": true,
        "sourceMap": true,
        "outDir": "./public/js",   
        "rootDir": "./public/ts",   
    },
    "include": ["public/ts/**/*.ts"],
    "exclude": [
        "node_modules", 
        "dist", 
        "public/js", 
        "config", 
        "controllers", 
        "models", 
        "routes", 
        "utils", 
        "views",
    ]
}
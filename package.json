{
  "name": "quizify",
  "version": "1.0.0",
  "description": "Quizify is an interactive web app that allows users to take quizzes on various topics, track their scores, and improve their knowledge in a fun and engaging way.",
  "main": "app.ts",
  "type": "module",
  "scripts": {
    "build:server": "tsc --project tsconfig.json",
    "build:client": "tsc --project tsconfig.client.json",
    "build": "npm run build:server && npm run build:client",
    "start": "node dist/app.js",
    "serve": "npm run build && npm start"
  },
  "keywords": [],
  "author": "Ashif Hassan",
  "license": "ISC",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "connect-flash": "^0.1.1",
    "cookie-parser": "^1.4.7",
    "crypto": "^1.0.1",
    "dotenv": "^16.4.7",
    "ejs": "^3.1.10",
    "express": "^4.21.2",
    "express-ejs-layouts": "^2.5.1",
    "express-session": "^1.18.1",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.8.4",
    "nodemailer": "^6.9.16"
  },
  "devDependencies": {
    "@types/bcrypt": "^5.0.2",
    "@types/connect-flash": "^0.0.40",
    "@types/cookie-parser": "^1.4.8",
    "@types/express": "^5.0.0",
    "@types/express-ejs-layouts": "^2.5.4",
    "@types/express-session": "^1.18.1",
    "@types/jsonwebtoken": "^9.0.7",
    "@types/mongoose": "^5.11.97",
    "@types/node": "^22.10.5",
    "@types/nodemailer": "^6.4.17",
    "nodemon": "^3.1.7",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2"
  }
}
